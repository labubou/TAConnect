# =============================================================================
# TAConnect Backend Environment Variables
# =============================================================================

# =============================================================================
# Django Core Settings
# =============================================================================
# Debug mode (set to False in production)
DEBUG=True

# Django secret key (required)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(50))"
SECRET_KEY="put-here-your-secret-key-and-don't-share-it"

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_NAME=ta_connect_db
DATABASE_USER=ta_connect_user
DATABASE_PASSWORD=ta_connect_password
DATABASE_HOST=db

# =============================================================================
# Google OAuth (Optional)
# =============================================================================
# To enable Google login:
# 1. Go to https://console.cloud.google.com/
# 2. Create a new project or select existing one
# 3. Enable Google+ API
# 4. Create OAuth 2.0 credentials
# 5. Add authorized redirect URIs
GOOGLE_CLIENT_ID='your-google-CLIENT_ID-for-google-auth'
GOOGLE_CLIENT_SECRET='your-GOOGLE_CLIENT_SECRET-for-google-auth'
GOOGLE_REDIRECT_URI=http://127.0.0.1:8000/api/auth/google/callback/

# =============================================================================
# Email Configuration
# =============================================================================
# For Gmail:
# 1. Enable 2-Factor Authentication on your Google account
# 2. Generate an App Password: https://myaccount.google.com/apppasswords
# 3. Use the generated 16-character password here
MAIL_PASSWORD='Your-email-app-password-for-mail-sending'

# =============================================================================
